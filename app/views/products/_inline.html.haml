.product.inline
  -if product_counter == 0
    .header.row
      .span4.title
        Title
      .span1.price
        Price
      .span1.quantity
        Quantity
      .span1
        Remove
  .product.row
    .span4.title= link_to product.title, product_path(product), {data: {photo: product.photo.url, title: product.title }} 
    .span1= "$#{product.price}"
    .span1= product.quantity_for(current_user)
    .span1= link_to "X", remove_from_cart_user_product_path(current_user, product, back: {controller: 'orders', action: 'new'}), remote: true