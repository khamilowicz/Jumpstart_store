.info
  .title= link_to product.title, product
  .description= product.description
  .discount
    .span6 Discount: 
    .span6.value="#{ product.discount}%"
  .on_sale
    .span6 On sale: 
    .span6.value= "#{product.on_sale}"
  .categories
    .span6 Categories: 
    .span6.value= "#{product.list_categories}"
  .sales
    .sales2 Sales
    .sales10
      - product.list_sales_with_discounts.each do |name, discount|
        .span6= name
        .span6= "#{discount}%"
