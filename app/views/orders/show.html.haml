Order page
.order
  .products
    =render partial: 'orders/product', collection: @order.products, as: :product
  .status= "Product is #{@order.status} since #{@order.status_change_date}"
  .total_price= @order.total_price
  .submit_date= @order.date_of_purchase
  .purchaser
    .name= @order.user.full_name
    .email= @order.user.email
  .total_price= @order.total_price