.user
  %h3=@user.full_name
  =link_to "Edit profile", edit_user_path(@user)
  .display_name="Display name: #{@user}"
  .email="Email: #{@user.email}"
  .address="Address: #{@user.address}"

  .orders_block
    -if @user.orders.empty?
      %h3.order_text.btn.disabled.span12 User has no orders
    -else
      %h3.order_text.btn.span12 Orders
      .orders=render @user.orders
  .products_block
    -if @user.products.empty?
      %h3.cart_text.btn.disabled.span12 User has no products in cart
    -else
      %h3.cart_text.btn.span12 Cart
      .cart
        = render 'products/table_header'
        = render presentify(@user.products)