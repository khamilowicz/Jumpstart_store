.top_bar
  .navbar
    .navbar-inner
      .brand=link_to "Shop", root_url
      %ul.nav
        %li=link_to current_user.display_name, user_path(current_user)
        %li=link_to "Products", products_path
        %li=link_to "My cart", cart_path
        %li=link_to "Orders", orders_path
        -if current_user.admin?
          %li.divider-vertical
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
              Dashboard
              %b.caret
            %ul.dropdown-menu
              %li=link_to "Sales menu", sales_path
              %li=link_to "Users", users_path
              %li=link_to "Search", search_path
              %li=link_to "New product", new_product_path
      %ul.nav.pull-right
        -if current_user.guest?
          %li.session_link=link_to "Log in", new_session_path 
          %li.signup_link= link_to "Sign up", new_user_path
        -else
          %li.session_link=link_to "Log out", session_path, method: :delete

